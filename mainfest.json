{

  "description": "Play classic breakout brick game on your popup window",
  "manifest_version": 2,
  "name": "Breakout Brick",
  "version": "1",

  "icons": {
    "32": "icon/brick.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon/brick.png",
    "default_title": "Breakout Brick",
    "default_popup": "index.html"
  },
  "permissions": ["storage"]

}
